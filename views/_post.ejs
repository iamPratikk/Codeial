<li id="post-<%= post._id%>" >
     <p>
      <% if( locals.user && post.user.id == locals.user.id){ %>
      <small>
        <a class="delete-post-button" href="/posts/destroy/<%=post.id %>">Delete Post</a>
      </small>
      <% } %>
      <h2><%= post.content%></h2>
      <br>
      <small> Post by <%=post.user.name %></small>
    </p>
    <div>
      <% if(locals.user){%>
      <form action="/comments/create" method="POST" id="post-comment">
        <input type="text" name="content" placeholder="type yor comment">
        <input type="hidden" name="post" value="<%= post._id %>">
        <input type="submit" value="add comment">
      </form>
      <%}%>
    </div>
    <div id="comments-container-<%= post._id%>" >
      <h4>comments</h4>
      <ul>
        <% for(comment of post.comments){ %>
         <%- include("_comment") -%>
          <%}%>
      </ul>
    </div>
    </li>